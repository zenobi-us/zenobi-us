{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"]
  },
  "include": [
    "**/*.glsl",
    "remix.env.d.ts",
    "playwright.config.ts",
    "content-collections.ts",
    "tailwind.config.ts",
    "app/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
